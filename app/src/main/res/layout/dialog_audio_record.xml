<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_radus10_white"
    android:orientation="vertical">
    <TextView
        android:padding="15dp"
        android:gravity="center"
        android:textColor="@color/text_333333"
        android:textSize="28sp"
        android:text="保存录音"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/gray_d5d"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <TextView
        android:textSize="24sp"
        android:id="@+id/tv_btn_save"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape_radus30_gray"
        android:gravity="center"
        android:textColor="@color/text_333333"
        android:text="保存"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="24sp"
        android:id="@+id/tv_btn_back"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape_radus30_gray"
        android:gravity="center"
        android:textColor="@color/text_333333"
        android:text="返回"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="24sp"
        android:id="@+id/tv_delete"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="@drawable/shape_radus30_gray"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:textColor="@color/red_text2"
        android:text="删除"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>