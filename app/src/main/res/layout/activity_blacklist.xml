<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="黑红名单"
            android:textColor="@color/white"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_gray"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="模式选择"
                android:textColor="@color/text_333333"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/ll_normal_contianer"
                android:background="@color/blue_2"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_normal"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="普通模式"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_btn_normal"
                    android:background="@drawable/shape_radus10_box"
                    android:padding="5dp"
                    android:textColor="@color/color_10"
                    android:textSize="14sp"
                    android:layout_marginRight="30dp"
                    android:text="启用该模式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_normal_status"
                    android:textColor="@color/color_7"
                    android:textSize="14sp"
                    android:text="禁用中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:background="@color/gray_d5d"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:id="@+id/ll_black_container"
                android:background="@color/white"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_black"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="黑名单模式"
                    android:textColor="@color/text_333333"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_btn_black"
                    android:background="@drawable/shape_radus10_box"
                    android:padding="5dp"
                    android:textColor="@color/color_10"
                    android:textSize="14sp"
                    android:layout_marginRight="30dp"
                    android:text="启用该模式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_black_status"
                    android:textColor="@color/color_7"
                    android:textSize="14sp"
                    android:text="禁用中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:background="@color/gray_d5d"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_white_container"
                android:background="@color/white"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_white"
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="白名单模式"
                    android:textColor="@color/text_333333"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_btn_white"
                    android:background="@drawable/shape_radus10_box"
                    android:padding="5dp"
                    android:textColor="@color/color_10"
                    android:textSize="14sp"
                    android:layout_marginRight="30dp"
                    android:text="启用该模式"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_white_status"
                    android:textColor="@color/color_7"
                    android:textSize="14sp"
                    android:text="禁用中"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_mode_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/tv_mode_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="黑名单模式"
                    android:textColor="@color/text_333333"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="30dp"
                    android:layout_height="23dp"
                    android:src="@drawable/arrow_down" />
            </LinearLayout>


            <android.support.design.widget.TabLayout
                app:tabTextAppearance="@style/TablayoutTextSize24"
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_add_container"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="2dp"
            android:paddingRight="100dp"
            android:paddingLeft="100dp"
            android:gravity="center_horizontal"
            android:background="@drawable/shape_radus50_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/add"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加"
                android:textColor="@color/text_333333"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>